module IOTest

import Lam.String (semigroupString)
import Data.Semigroup (append)
import Data.Function (const)
import Data.Monad (bind, sequence)
import IO (getLine, puts, monadIO)

makeGreeting : String -> String
makeGreeting name = append semigroupString "Hello, " name

greet : String -> IO ()
greet name = puts (makeGreeting name)

main : IO ()
main = sequence monadIO (puts "What is your name?") (bind monadIO getLine greet)
