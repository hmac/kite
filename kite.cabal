      Paths_kite
  hs-source-dirs:
      test
  default-extensions: OverloadedStrings LambdaCase TupleSections DeriveDataTypeable Rank2Types TemplateHaskell
  ghc-options:
    -threaded
    -rtsopts
    -with-rtsopts=-N
    -Wall
    -Werror
    -Wcompat
    -Wincomplete-record-updates
    -Wincomplete-uni-patterns
    -Wredundant-constraints
  build-depends:
      QuickCheck
    , base >=4.7 && <5
    , containers
    , directory
    , extra
    , filepath
    , hedgehog
    , hspec
    , hspec-hedgehog
    , hspec-megaparsec
    , kite
    , megaparsec
    , mtl
    , optparse-generic
    , pretty-simple
    , prettyprinter
    , prettyprinter-ansi-terminal
    , semigroupoids
    , template-haskell
    , text
    , transformers
  default-language: Haskell2010
