  main-is: Main.hs
  other-modules:
      Paths_kite
  hs-source-dirs:
      benchmarks
  default-extensions: OverloadedStrings LambdaCase TupleSections DeriveDataTypeable Rank2Types TemplateHaskell
  ghc-options:
    -O2
    -threaded
    -rtsopts
    -with-rtsopts=-N
    -Wall
    -Werror
    -Wcompat
    -Wincomplete-record-updates
    -Wincomplete-uni-patterns
    -Wredundant-constraints
  build-depends:
      base >=4.7 && <5
    , containers
    , criterion
    , directory
    , extra
    , filepath
    , hedgehog
    , kite
    , megaparsec
    , mtl
    , optparse-generic
    , pretty-simple
    , prettyprinter
    , prettyprinter-ansi-terminal
    , semigroupoids
    , text
    , transformers
  default-language: Haskell2010

