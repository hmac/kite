module Lam.Monoid

import Lam.List (foldr)
import Lam.Primitive (appendString)

-- We can't (yet) handle superclass constraints
-- class Semigroup a => Monoid a where
--   empty : a

class Monoid a where
  empty : a
  mappend : a -> a -> a

instance Monoid String where
  empty = ""
  mappend x y = appendString x y

concat : Monoid a => [a] -> a
concat = foldr mappend empty
